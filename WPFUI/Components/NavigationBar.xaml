<UserControl x:Class="PASEDM.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PASEDM.Components" 
             xmlns:viewmodels="clr-namespace:PASEDM.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:NavigationBarViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FF20900B">

    <Grid MaxWidth="1000" Margin="20 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="cbToggleMenu" Grid.Column="0">
            <CheckBox.Template>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Background="Transparent">
                        <Viewbox Width="25" Height="25">
                            <Path
                                  Data="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"
                                  Fill="White"
                                  Stretch="Fill" />
                        </Viewbox>
                    </Grid>
                </ControlTemplate>
            </CheckBox.Template>
        </CheckBox>
        <TextBlock Foreground="White" Grid.Column="1" Text="Navigation Demo" VerticalAlignment="Center" 
                   Visibility="{Binding IsLoggedId, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <ComboBox Grid.Column="2">
            <ComboBoxItem>
                <Button Command="{Binding NavigateEntryUser}">
                    <TextBlock Text="Выход"/>
                </Button>
            </ComboBoxItem>
            <ComboBoxItem>
                <Button Command="{Binding LogoutCommand}">
                    <TextBlock Text="Убрать"/>
                </Button>
                
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>
