<UserControl x:Class="PASEDM.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PASEDM.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <PasswordBox x:Name="passwordBox" 
                 PasswordBox.PasswordChanged="PasswordBox_PasswordChanged"
                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                 materialDesign:HintAssist.Foreground="#FF20900B" 
                 materialDesign:TextFieldAssist.UnderlineBrush="#FF20900B"
                 CaretBrush="#FF20900B" 
                 SelectionBrush="#FF20900B"
                 VerticalAlignment="Center" 
                 Margin="0,0,0,15" />
</UserControl>
